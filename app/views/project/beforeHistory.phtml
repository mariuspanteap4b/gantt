<h3 class='p-4'>Choose project to show its history</h3>

<div class="container">

    <div class="row font-weight-bold bg-light border p-2">
        <div class="col">
            Name
        </div>
        <div class="col">
            Description
        </div>
    </div>

    {% for project in projects %}
    <div class="row border border-top-0 p-1">
        <div class="col">
            {{ link_to(['for': 'historyProject', 'id': project.id], project.name, 'class': 'text-dark') }}
        </div>
        <div class="col">
            {{ link_to(['for': 'historyProject', 'id': project.id], project.description, 'class': 'text-dark') }}
        </div>
    </div>
    {% endfor %}

</div>
